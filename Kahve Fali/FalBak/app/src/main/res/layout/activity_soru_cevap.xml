<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kahve_bg"
    tools:context=".ui.kahvefali.SoruCevap">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="#7C9E8E82"
                    android:text="Biraz Fincanınızdan Bahsedelim"
                    android:textColor="#45342F"
                    android:textSize="46sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E49E8E82"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kahve_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kahveniz Nasıldı?"
                        android:textAlignment="center"
                        android:textColor="#45342F"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/kahve_sade"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPressed"
                            android:text="ToggleButton"
                            android:textOff="SADE"
                            android:textOn="SADE"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/kahve_orta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorUnpressed"
                            android:text="ToggleButton"
                            android:textOff="ORTA"
                            android:textOn="ORTA"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/kahve_sekerli"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorUnpressed"
                            android:text="ToggleButton"
                            android:textOff="ŞEKERLİ"
                            android:textOn="ŞEKERLİ"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E49E8E82"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/telve_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Telveniz Nasıl?"
                        android:textAlignment="center"
                        android:textColor="#45342F"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/telve_acik"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPressed"
                            android:text="ToggleButton"
                            android:textOff="Açık"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/telve_normal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorUnpressed"
                            android:text="ToggleButton"
                            android:textOff="NORMAL"
                            android:textOn="NORMAL"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/telve_koyu"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorUnpressed"
                            android:text="ToggleButton"
                            android:textOff="KOYU"
                            android:textOn="KOYU"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#E49E8E82"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/sivi_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Süt İlave Ettiniz Mi?"
                        android:textAlignment="center"
                        android:textColor="#45342F"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/sut_evet"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorPressed"
                            android:text="ToggleButton"
                            android:textOff="HAYIR"
                            android:textOn="HAYIR"
                            android:textSize="18sp" />

                        <ToggleButton
                            android:id="@+id/sut_hayir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorUnpressed"
                            android:text="ToggleButton"
                            android:textOff="EVET"
                            android:textOn="EVET"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:background="#7C9E8E82"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/cevapla"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/ic_send"
                        android:backgroundTint="#8A3D3D" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GÖNDER"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/ad_banner_id" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>